<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="1080" prefWidth="1920" styleClass="main-menu-bg" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.farmingcmulator.controller.MainMenuController">
    <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true">
        <image>
            <Image url="@../images/mainmenu.png" />
        </image>
    </ImageView>
    
    <VBox alignment="CENTER" spacing="30">
        <padding>
            <Insets bottom="40" left="60" right="60" top="40" />
        </padding>
        
        <!-- Title Box -->
        <VBox alignment="CENTER" maxWidth="600" spacing="10" styleClass="title-box">
            <padding>
                <Insets bottom="35" left="50" right="50" top="35" />
            </padding>
            
            <Label styleClass="game-title" text="FARMING" />
            <Label style="-fx-font-family: 'Georgia'; -fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #7BC96F; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0.3, 0, 2);" text="SIMULATOR" />
            
            <Region prefHeight="5" />
            
            <Label styleClass="game-subtitle" text="~ Grow • Harvest • Prosper ~" />
        </VBox>
        
        <Region prefHeight="15" />
        
        <!-- Menu Buttons -->
        <VBox alignment="CENTER" maxWidth="350" spacing="18">
            
            <Button onAction="#onPlayClicked" prefHeight="60" prefWidth="320" styleClass="menu-btn-primary" text="START FARMING" />
            
            <Button onAction="#onDatabaseClicked" prefHeight="60" prefWidth="320" styleClass="menu-btn-secondary" text="DATABASE" />
            
            <Button onAction="#onExitClicked" prefHeight="60" prefWidth="320" styleClass="menu-btn-danger" text="EXIT" />
            
        </VBox>
        
        <Region prefHeight="20" />
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="5">
            <Label styleClass="footer-text" text="Version 2.0 - JavaFX Edition" />
        </VBox>
        
    </VBox>
    
</StackPane>
